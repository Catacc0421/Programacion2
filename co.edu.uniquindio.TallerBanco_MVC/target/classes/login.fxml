<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="center" prefHeight="400.0" prefWidth="400.0" spacing="30.0" style="-fx-background-color: #1388A8;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.banco.controlador.LoginControlador">

    <Label text="Iniciar sesión">
        <font>
            <Font name="System Italic" size="25.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="Número de identificación:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="IdentificacionTextField" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="ContrasenaTextField" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="buttonIngresar" minHeight="40.0" minWidth="130.0" onAction="#irPanelCliente" style="-fx-background-color: #00FFFF; -fx-text-fill: Black;" text="Iniciar sesión" />
        <Button fx:id="buttonRegresar" minHeight="40.0" minWidth="130.0" onAction="#irInicio" style="-fx-background-color: #00FFFF; -fx-text-fill: Black;" text="Regresar a la página de inicio" />
    </HBox>
    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@img/logo.jpg" />
        </image>
    </ImageView>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" prefHeight="400.0" prefWidth="400.0" spacing="30.0" style="-fx-background-color: #1388A8;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.banco.controlador.ActualizarControlador">

    <Label text="Actualizar Datos">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0">
         <effect>
            <Blend />
         </effect></Label>
        <TextField fx:id="txtNombre" minHeight="30.0" style="-fx-background-color: #E0FFFF;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="1">
         <effect>
            <Blend />
         </effect></Label>
        <TextField fx:id="txtDireccion" minHeight="30.0" style="-fx-background-color: #E0FFFF;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Número de Identificación:" GridPane.columnIndex="0" GridPane.rowIndex="2">
         <effect>
            <Blend />
         </effect></Label>
        <TextField fx:id="txtIdentificacion" minHeight="30.0" style="-fx-background-color: #E0FFFF;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Correo Electrónico:" GridPane.columnIndex="0" GridPane.rowIndex="3">
         <effect>
            <Blend />
         </effect></Label>
        <TextField fx:id="txtCorreo" minHeight="30.0" style="-fx-background-color: #E0FFFF;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="4">
         <effect>
            <Blend />
         </effect></Label>
        <PasswordField fx:id="txtPassword" minHeight="30.0" style="-fx-background-color: #E0FFFF;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <Button minHeight="40.0" minWidth="130.0" onAction="#Actualizar" style="-fx-background-color: #7FDF0C; -fx-text-fill: Black;" text="Actualizar" />

</VBox>

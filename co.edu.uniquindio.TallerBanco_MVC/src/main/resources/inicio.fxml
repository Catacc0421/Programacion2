<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #1388A8;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.banco.controlador.InicioControlador">

    <Label text="Bienvenido a banco fortuna">
      <font>
         <Font size="18.0" />
      </font>
    </Label>

    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@img/logo.jpg" />
        </image>
    </ImageView>

    <Label text="¿Qué desea hacer el día de hoy?">
        <font>
             <Font size="14.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="20.0">
        <Button minHeight="40.0" minWidth="130.0" onAction="#irIniciarSesion" style="-fx-background-color: #00FFFF; -fx-text-fill: Black;" text="Iniciar sesión" />
        <Button minHeight="40.0" minWidth="130.0" onAction="#irRegistroCliente" style="-fx-background-color: #00FFFF; -fx-text-fill: Black;" text="Registrarse" />
    </HBox>

</VBox>
